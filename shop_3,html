    <div class="notification" id="notification">
        <p id="notificationMessage"></p>
    </div>

    <script>
        // Модальные окна
        const cartModal = document.getElementById('cartModal');
        const checkoutModal = document.getElementById('checkoutModal');
        const notification = document.getElementById('notification');

        // Открыть корзину
        function openCartModal() {
            cartModal.style.display = 'block';
        }

        // Закрыть корзину
        function closeCartModal() {
            cartModal.style.display = 'none';
        }

        // Открыть оформление заказа
        function openCheckoutModal() {
            checkoutModal.style.display = 'block';
        }

        // Закрыть оформление заказа
        function closeCheckoutModal() {
            checkoutModal.style.display = 'none';
        }

        // Добавить товар в корзину
        function addToCart(productId) {
            // Пример добавления товара в корзину
            const cartItems = document.getElementById('cartItems');
            const totalPrice = document.getElementById('totalPrice');

            const product = document.getElementById('product' + productId);
            const productName = product.querySelector('h3').textContent;
            const productPrice = parseFloat(product.querySelector('.price').textContent.replace('$', ''));

            const cartItem = document.createElement('div');
            cartItem.classList.add('cart-item');
            cartItem.innerHTML = `
                <img src="https://placehold.jp/150x150.png" alt="${productName}">
                <p>${productName}</p>
                <p>$${productPrice}</p>
                <button onclick="removeFromCart(${productId})">Удалить</button>
            `;

            cartItems.appendChild(cartItem);

            // Обновление общей суммы
            let currentTotal = parseFloat(totalPrice.textContent);
            currentTotal += productPrice;
            totalPrice.textContent = currentTotal.toFixed(2);
        }

        // Удалить товар из корзины
        function removeFromCart(productId) {
            // Пример удаления товара из корзины
            const cartItems = document.getElementById('cartItems');
            const totalPrice = document.getElementById('totalPrice');

            const product = document.getElementById('product' + productId);
            const productPrice = parseFloat(product.querySelector('.price').textContent.replace('$', ''));

            // Удаление соответствующего элемента из DOM
            cartItems.removeChild(cartItems.lastElementChild);

            // Обновление общей суммы
            let currentTotal = parseFloat(totalPrice.textContent);
            currentTotal -= productPrice;
            totalPrice.textContent = currentTotal.toFixed(2);
        }

        // Применить купон
        function applyCoupon() {
            const couponMessage = document.getElementById('couponMessage');
            couponMessage.textContent = 'Скидка 10% применена';
        }

        // Валидация формы оформления заказа
        function validateForm() {
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const address = document.getElementById('address').value.trim();
            const policy = document.getElementById('policy').checked;

            let isValid = true;

            // Валидация имени
            const nameError = document.getElementById('nameError');
            if (!/^[a-zA-Zа-яА-ЯёЁ-]+$/.test(name)) {
                nameError.textContent = 'Имя должно содержать только буквы и символ "-"';
                isValid = false;
            } else {
                nameError.textContent = '';
            }

            // Валидация email
            const emailError = document.getElementById('emailError');
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                emailError.textContent = 'Введите корректный email';
                isValid = false;
            } else {
                emailError.textContent = '';
            }

            // Валидация адреса
            const addressError = document.getElementById('addressError');
            if (address.length === 0) {
                addressError.textContent = 'Введите адрес доставки';
                isValid = false;
            } else {
                addressError.textContent = '';
            }

            // Подтверждение политики конфиденциальности
            const policyError = document.getElementById('policyError');
            if (!policy) {
                policyError.textContent = 'Необходимо согласиться с политикой конфиденциальности';
                isValid = false;
            } else {
                policyError.textContent = '';
            }

            return isValid;
        }

        // Уведомления
        function showNotification(message) {
            notification.querySelector('#notificationMessage').textContent = message;
            notification.style.display = 'block';

            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>
