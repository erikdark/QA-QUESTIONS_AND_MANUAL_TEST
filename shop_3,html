        <div id="cartModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeCartModal()">&times;</span>
                <div class="cart">
                    <h2>Корзина</h2>
                    <div id="cartItems">
                        <!-- Содержимое корзины будет добавляться программно -->
                    </div>
                    <div>
                        <p><strong>Общая сумма:</strong> $<span id="totalPrice">0</span></p>
                    </div>
                    <button onclick="openCheckoutModal()">Оформить заказ</button>
                    <button onclick="applyCoupon()">Применить купон</button>
                    <p class="coupon-message" id="couponMessage"></p>
                </div>
            </div>
        </div>

        <div id="checkoutModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeCheckoutModal()">&times;</span>
                <div class="checkout-form">
                    <h2>Оформление заказа</h2>
                    <form id="orderForm" onsubmit="return validateForm()">
                        <label for="name">Имя:</label>
                        <input type="text" id="name" name="name" required>
                        <div class="error-message" id="nameError"></div>

                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                        <div class="error-message" id="emailError"></div>

                        <label for="address">Адрес:</label>
                        <textarea id="address" name="address" required></textarea>
                        <div class="error-message" id="addressError"></div>

                        <button type="submit">Подтвердить заказ</button>
                    </form>
                    <div class="policy">
                        <input type="checkbox" id="policy" required>
                        <label for="policy">Я согласен с политикой конфиденциальности</label>
                        <div class="error-message" id="policyError"></div>
                    </div>
                </div>
